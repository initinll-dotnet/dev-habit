{
  "ConnectionStrings": {
    "Database": "Host=devhabit.postgres;Database=devhabit;Username=postgres;Password=postgres"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "Jwt": {
    "Key": "your-secret-key-here-that-should-also-be-fairly-long",
    "Issuer": "dev-habit.api",
    "Authority": "<YOUR_AUTH0_DOMAIN>",
    "Audience": "<YOUR_AUTH0_AUDIENCE>",
    "ExpirationInMinutes": 30,
    "RefreshTokenExpirationDays": 7
  },
  "Encryption": {
    "Key": "your-secret-key-here-that-should-be-exactly-32-bytes-long"
  },
  "GitHubAutomation": {
    "ScanIntervalMinutes": 15
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:5173" ]
  },
  "Tags": {
    "MaxAllowedTags": 5
  },
  "GitHub": {
    "BaseUrl": "https://api.github.com"
  }
}
